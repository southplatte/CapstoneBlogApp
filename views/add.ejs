<%- include("header.ejs"); %>

<h1>Add A New Post Using The Form Below</h1>
<form class="form" method="post">
    <div class="form-group mb-3">
      <label for="postTitle">Post Title</label>
      <input type="text" class="form-control" id="postTitle" placeholder="Post Title">
    </div>
    <div class="form-group mb-3">
      <label for="postContent">Post Content</label>
      <textarea class="form-control" id="summernote" name="postContent" placeholder="Enter Post Content Here - HTML allowed"></textarea>
    </div>
    <div class="form-group mb-3">
        <button type="submit" class="btn btn-primary">Add Post</button>
    </div>
  </form>

